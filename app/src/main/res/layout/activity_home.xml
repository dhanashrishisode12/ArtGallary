<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="#DFD3F3"
    tools:context=".HomeActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_margin="10dp"
        android:backgroundTint="#B0E7EF"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="choose category"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
            <ImageView
        android:id="@+id/imageViewp1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/baby_image"  />
    <ImageView
        android:id="@+id/imageViewP2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/surprise1"  />
    <ImageView
        android:id="@+id/imageViewP3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/images"  />
</LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="5dp">
            <Button
                android:id="@+id/babyBtn"
                android:layout_width="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Baby"
                android:background="#1111"
                android:layout_height="50dp"/>
            <Button
                android:id="@+id/prewediingBtn"
                android:layout_width="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Prewedding  "
                android:background="#1111"
                android:layout_height="50dp"/>
          <Button
               android:id="@+id/wediingBtn"
               android:layout_width="100dp"
               android:layout_marginLeft="10dp"
               android:layout_marginTop="10dp"
               android:text="wedding "
               android:background="#1111"
               android:layout_height="50dp"/>
</LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="275dp">
            <ImageView
                android:id="@+id/imageViewp4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/mod1"  />
            <ImageView
                android:id="@+id/imageViewP5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bs2"  />
            <ImageView
                android:id="@+id/imageViewP6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/marathii"  />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="420dp">
            <Button
                android:id="@+id/modelingBtn"
                android:layout_width="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="modeling"
                android:background="#1111"
                android:layout_height="55dp"/>
            <Button
                android:id="@+id/babyshowerBtn"
                android:layout_width="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="babyshower"
                android:background="#1111"
                android:layout_height="55dp"/>
            <Button
                android:id="@+id/marathiBtn"
                android:layout_width="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="marathilook"
                android:background="#1111"
                android:layout_height="55dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>