<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFD3F3"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Babyphotos">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:layout_margin="10dp"
        android:backgroundTint="#B0E7EF"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">
        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="Catalog"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="100dp"
            android:gravity="center_horizontal"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/baby2"  />
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="140dp"
                android:layout_height="100dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="80dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/baby3"  />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="210dp"
            android:gravity="center_horizontal"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/baby4"  />
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="140dp"
                android:layout_height="100dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="80dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/baby5"  />
        </LinearLayout>
        <Button
            android:id="@+id/bookBtn"
            android:layout_width="250dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="380dp"
            android:text="book now  "
            android:background="#1111"
            android:layout_height="50dp"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>